<tool id="plasmidtron_prepare" name="plasmidtron prepare" version="@VERSION@">
    <description>Prepare a tab file from the input of reads</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <command detect_errors="exit_code"><![CDATA[
    #for $input in $reads:
      echo -e '$input[0]''','''$input[1]' >> 'tab_file';
    #end for
    ]]></command>

    <inputs>
        <param name="reads" format="fastqsanger,fastqsanger.gz,fastqsanger.bz2" type="data_collection" collection_type="list,list:paired" label="Paired collection" help="Collection of reads"/>
     </inputs>
    <outputs>
        <data name="tab_file" format="tabular"  label="${tool.name} on ${on_string}: Tab file" from_work_dir="tab_file"/>
    </outputs>
    <help><![CDATA[
        ]]></help>
</tool>