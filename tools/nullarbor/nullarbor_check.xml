<tool id="nullarbor_check" name="Nullarbor check" version="0.1.0">
    <description>Run check command to ensure that the system meets dependency requirements</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements" />
    <expand macro="env" />

    <command detect_errors="exit_code"><![CDATA[
         nullarbor.pl --check > $output
    ]]></command>

    <outputs>
        <data name="output" format="txt"  label="${tool.name} check result" from_work_dir="output"/>
    </outputs>
    <help><![CDATA[
        ]]></help>
</tool>
